{% block javascripts %}
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
{% endblock %}

{% block body %}
    <h1 class="text-[#1B3168] font-[Epilogue] font-semibold text-[28px]">Oups ! Cette page est introuvable (404).</h1>
