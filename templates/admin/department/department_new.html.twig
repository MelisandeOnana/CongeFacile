{% extends 'base.html.twig' %}

{% block title %}Ajouter un Département/Service{% endblock %}

{% block body %}
    <h1 class="font-semibold text-[#1B3168] text-[28px] font-[Epilogue] mb-10">Ajouter un département/service</h1>
    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>
        {% for label, messages in app.flashes %}
            <div class=" mt-6 alert alert-{{ label }}">
                {% for message in messages %}
                    <p class="font-bold" >{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}
        <div class="flex mt-6">
            <button type="submit" class="bg-[#1B3168] text-white py-2 px-4 rounded-[6px] w-[154px] h-[40px]">Ajouter</button>
        </div>
    {{ form_end(form) }}
{% endblock %}