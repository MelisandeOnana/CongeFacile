<nav class="shadow-lg w-[280px] text-white h-full">
    {% if app.user %}
        <div class="hoverable-div h-[44px] mt-[30px] w-full flex items-center {% if app.request.attributes.get('_route') == 'home_index' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
            <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'home_index' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="{{ path('home_index') }}">Accueil</a>
        </div>
        {% if is_granted('ROLE_COLLABORATOR') %}
            <div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'collab' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
                <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'collab' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="{{ path('request_new') }}">Nouvelle demande</a>
            </div>
            <div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'historic' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
                <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'historic' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="{{ path('historic') }}">Historique des demandes</a>
            </div>
        {% elseif is_granted('ROLE_MANAGER') %}
            <div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'admin' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
                <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'admin' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="">Demandes en attentes</a>
            </div>
            <div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'historic' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
                <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'historic' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="{{ path('historic') }}">Historique des demandes</a>
            </div>
            <div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'admin_teams' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
                <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'admin_teams' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="">Mon équipe</a>
            </div>
            <div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'admin_stats' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
                <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'admin_stats' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="">Statistiques</a>
            </div>
        {% endif %}
        <div class="hoverable-div h-[1px] mt-[25px] w-[210px] bg-gray-300 mx-auto"></div>
        <div class="hoverable-div h-[44px] mt-[30px] w-full flex items-center {% if app.request.attributes.get('_route') == 'logout_info' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
    <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'logout_info' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="">Mes informations</a>
</div>
<div class="hoverable-div h-[44px] mt-[10px] w-full flex items-center {% if app.request.attributes.get('_route') == 'logout_preferences' %}bg-[#004C6C0D] border-r-4 border-[#004C6C]{% endif %}">
    <a class="px-4 text-[#637381] text-base block w-full {% if app.request.attributes.get('_route') == 'logout_preferences' %}text-[#004C6C] {% else %}text-[#637381]{% endif %}" href="">Mes préférences</a>
</div>
